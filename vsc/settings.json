{
    //general
    "files.hotExit": "onExitAndWindowClose",
    "window.restoreWindows": "all",
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "update.showReleaseNotes": false,
    "editor.lineNumbers":"on",
    "editor.cursorBlinking": "smooth",
    "window.zoomLevel": 0,
    "search.useIgnoreFiles": false,

    "dotfiles.repository": "breemts/LinuxConfig",
    "dotfiles.installCommand": "~/dotfiles/setup.sh",

    // remote devcontainers and terminal settings
    //"terminal.explorerKind": "external",
    //"terminal.external.linuxExec": "/bin/bash",
    //"terminal.integrated.allowChords": false
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\wsl.exe",
    "terminal.integrated.scrollback": 10000,
    "remote.containers.defaultExtensions": [
        "eamodio.gitlens",
        "donjayamanne.githistory",
        "streetsidesoftware.code-spell-checker",
        "streetsidesoftware.code-spell-checker-german",
        "davidanson.vscode-markdownlint"
    ],

    //spellcheck
    "spellright.language": [
        "de",
        "English",
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "cSpell.language": "en,de",
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "git-commit",
        "go",
        "handlebars",
        "haskell",
        "html",
        "jade",
        "java",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "pug",
        "python",
        "restructuredtext",
        "rust",
        "scala",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "yaml",
        "yml"
    ],
    // vim
    "vim.leader": "<space>",
    "vim.overrideCopy": false,
    "vim.useCtrlKeys": false,
    "vim.handleKeys": {
        "<C-v>": true,
        "<C-r>": true,
        "<C-h>": true,
        "<C-o>": true,
        "<C-i>": true,
        "<C-a>": true,
        "<C-x>": true
    },
    "vim.autoindent": true,
    "vim.startInInsertMode": true,
     "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "m"],
            "commands": ["bookmarks.toggle"]
        },
        {
            "before": ["<leader>", "l"],
            "commands": ["bookmarks.list"]
        },
        {
            "before": ["<leader>", "r"],
            "commands": [":reg"]
        },
        {
            "before": ["<leader>", "e"],
            "after": ["$"]
        },
        {
            "before": ["<leader>", "b"],
            "after": ["^"]
        },
        {
            "before": ["<leader>", "b"],
            "after": ["0"]
        },
        {
            "before": ["<leader>", "i"],
            "after": ["i_<esc>r"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        }
    ],
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.highlightedyank.enable": true,
    "vim.foldfix": true,
    "vim.replaceWithRegister": true,
    "vim.cursorStylePerMode.visualline": "block",
    "vim.cursorStylePerMode.visualblock": "block",
    "vim.cursorStylePerMode.visual": "block",
    "vim.cursorStylePerMode.replace": "underline"
}